# =============================================================================
# MoonGaze Environment Configuration - EXAMPLE FILE
# =============================================================================
# Copy this file to .env and fill in your actual values
# All client-accessible variables MUST be prefixed with EXPO_PUBLIC_

# =============================================================================
# EXPO CONFIGURATION
# =============================================================================

# Expo project ID (from EAS)
EXPO_PUBLIC_PROJECT_ID=your-expo-project-id

# Expo project slug
EXPO_PUBLIC_PROJECT_SLUG=your-app-slug

# Expo project owner
EXPO_PUBLIC_PROJECT_OWNER=your-expo-username

# App scheme for deep linking
EXPO_PUBLIC_APP_SCHEME=your-app-scheme

# App version
EXPO_PUBLIC_APP_VERSION=1.0.0

# Bundle identifiers (from Firebase config)
EXPO_PUBLIC_ANDROID_PACKAGE_NAME=com.yourcompany.yourapp
EXPO_PUBLIC_IOS_BUNDLE_ID=com.yourcompany.yourapp

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase project ID
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase API Key (Android)
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-android

# Firebase API Key (iOS) - Different key for iOS platform
EXPO_PUBLIC_FIREBASE_API_KEY_IOS=your-firebase-api-key-ios

# Firebase Auth Domain
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Storage Bucket
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Firebase Messaging Sender ID
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# Firebase App ID (Android)
EXPO_PUBLIC_FIREBASE_APP_ID_ANDROID=1:your-sender-id:android:your-app-id

# Firebase App ID (iOS)
EXPO_PUBLIC_FIREBASE_APP_ID_IOS=1:your-sender-id:ios:your-app-id

# Firebase Measurement ID (optional, for analytics)
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# FIREBASE FUNCTIONS
# =============================================================================

# Firebase Functions Region
EXPO_PUBLIC_FIREBASE_FUNCTIONS_REGION=us-central1

# Firebase Functions URL (for direct calls)
EXPO_PUBLIC_FIREBASE_FUNCTIONS_URL=https://us-central1-your-project.cloudfunctions.net

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret for token signing (server-side only)
JWT_SECRET=your-super-secret-jwt-key-here

# Password reset token expiry (in seconds)
EXPO_PUBLIC_PASSWORD_RESET_EXPIRY=3600

# Partner linking code expiry (in seconds)
EXPO_PUBLIC_PARTNER_CODE_EXPIRY=300

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Push notification server key (for FCM)
EXPO_PUBLIC_FCM_SERVER_KEY=your-fcm-server-key

# Notification channel ID
EXPO_PUBLIC_NOTIFICATION_CHANNEL_ID=your-app-default

# Expo Push Notification Service URL
EXPO_PUBLIC_PUSH_NOTIFICATION_URL=https://exp.host/--/api/v2/push/send

# =============================================================================
# DEEP LINKING & SHARING
# =============================================================================

# App domain for deep links
EXPO_PUBLIC_APP_DOMAIN=yourapp.com

# Partner linking base URL
EXPO_PUBLIC_PARTNER_LINK_BASE_URL=https://yourapp.com/partner

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Sentry DSN (for error tracking)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics enabled flag
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug mode flag
EXPO_PUBLIC_DEBUG_MODE=false

# Log level (debug, info, warn, error)
EXPO_PUBLIC_LOG_LEVEL=info

# Performance monitoring disabled

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable offline mode
EXPO_PUBLIC_OFFLINE_MODE_ENABLED=true

# Enable real-time sync
EXPO_PUBLIC_REALTIME_SYNC_ENABLED=true

# Enable celebration animations
EXPO_PUBLIC_CELEBRATION_ANIMATIONS_ENABLED=true

# Enable push notifications
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Base API URL (if using custom backend)
EXPO_PUBLIC_API_BASE_URL=https://api.yourapp.com

# API timeout (in milliseconds)
EXPO_PUBLIC_API_TIMEOUT=10000

# Max retries for API calls
EXPO_PUBLIC_MAX_RETRIES=3

# =============================================================================
# STORAGE & CACHE
# =============================================================================

# Cache expiry time (in seconds)
EXPO_PUBLIC_CACHE_EXPIRY=3600

# Max cache size (in MB)
EXPO_PUBLIC_MAX_CACHE_SIZE=50

# =============================================================================
# ENVIRONMENT INDICATORS
# =============================================================================

# Environment name (development, staging, production)
EXPO_PUBLIC_ENVIRONMENT=development

# Development client flag (for EAS development builds)
EXPO_PUBLIC_DEV_CLIENT=false

# Build number (auto-incremented)
EXPO_PUBLIC_BUILD_NUMBER=1

# EAS Build Profile (set automatically by EAS)
EAS_BUILD_PROFILE=development

# =============================================================================
# SERVER-SIDE ONLY VARIABLES (NOT PREFIXED WITH EXPO_PUBLIC_)
# =============================================================================

# Firebase Admin SDK private key (for server-side operations)
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Firebase Admin SDK client email
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Database URL (if using external database)
DATABASE_URL=your-database-url

# Redis URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Email service configuration
EMAIL_SERVICE_API_KEY=your-email-service-key
EMAIL_FROM_ADDRESS=noreply@yourapp.com

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Stripe API keys (if implementing payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Google Maps API key (if using maps)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Apple App Store Connect API (for app store operations)
APPLE_APP_STORE_CONNECT_KEY_ID=your-key-id
APPLE_APP_STORE_CONNECT_ISSUER_ID=your-issuer-id
APPLE_APP_STORE_CONNECT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Google Play Console API (for Android store operations)
GOOGLE_PLAY_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PLAY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"