{
  "name": "moongaze",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:development": "eas build --profile development",
    "build:preview": "eas build --profile preview",
    "build:production": "eas build --profile production",
    "build:ios": "eas build --platform ios --profile production",
    "build:android": "eas build --platform android --profile production",
    "submit:ios": "eas submit --platform ios --profile production",
    "submit:android": "eas submit --platform android --profile production",
    "deploy:firestore": "firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:firestore:dev": "./scripts/deploy-firestore-dev.sh",
    "deploy:firestore:prod": "./scripts/deploy-firestore-prod.sh",
    "validate:env": "node scripts/validate-environment.js",
    "validate:firebase": "npm run validate:env && firebase projects:list",
    "build:local:ios": "npx expo run:ios --configuration Release",
    "build:local:android": "npx expo run:android --variant release",
    "build:local:ios:debug": "npx expo run:ios --configuration Debug",
    "build:local:android:debug": "npx expo run:android --variant debug",
    "build:local:clean": "npx expo run:clean",
    "build:local:reset": "npx expo run:reset",
    "build:local:ios:simulator": "npx expo run:ios --simulator",
    "build:local:android:emulator": "npx expo run:android --emulator",
    "build:local:check": "npx expo-doctor",
    "build:local:install": "npx expo install --fix",
    "build:local:prebuild": "npx expo prebuild --clean",
    "build:local:prebuild:ios": "npx expo prebuild --platform ios --clean",
    "build:local:prebuild:android": "npx expo prebuild --platform android --clean",
    "build:local:script": "./scripts/build-local.sh",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/datetimepicker": "8.4.1",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-firebase/analytics": "^23.2.1",
    "@react-native-firebase/app": "^23.2.1",
    "@react-native-firebase/crashlytics": "^23.2.1",
    "@react-navigation/bottom-tabs": "^7.4.6",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.7",
    "expo": "~53.0.22",
    "expo-constants": "^17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-device": "^7.1.4",
    "expo-linking": "^7.1.7",
    "expo-notifications": "^0.31.4",
    "expo-status-bar": "~2.2.3",
    "firebase": "^12.2.1",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-pager-view": "6.7.1",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-vector-icons": "^10.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-typescript": "^7.25.2",
    "@react-native-community/cli": "^13.6.3",
    "@react-native-community/cli-platform-android": "^13.6.3",
    "@react-native-community/cli-platform-ios": "^13.6.3",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
